body
{
	margin:  0;
	padding: 0;
	width:100%;
	height:100%;
}
html { height: 100%; }

#top_nav { 
	width: 100%; 
	height: 50px; 
	background-color: black; 
	color: white;
	min-width: 400px;	
	float: left;
	-moz-user-select: none; 
    -khtml-user-select: none; 
    -webkit-user-select: none; 
    -o-user-select: none; 
	user-select: none; 
}

div.loading
{
	background-size: 50px 50px;
	background-repeat: no-repeat;
	background-position: center center;
	background-image: url(../image/loading.gif);
	width: 100%;
	height: 100%;
	float: left;
}

a
{
	text-decoration: none;
	color: white;
}
#top_nav ul
{
	height: 20px;
	margin-top: 0px;
	padding-top: 15px;
	float: left;
}
#top_nav li
{
	display: 		inline;
	list-style-type: 	none;
	font-family: 		Open Sans;
	font-size: 		0.750em;
	cursor: 		pointer;
	padding:		10px;
}

#top_nav li:hover,
#top_nav #side_drop:hover
{
	background-color: 	#2c3e50
}

#top_nav #side_drop
{
	height: 		20px;
	margin-top: 		2px;
	background-color: 	black;
	border-left: 		1px solid white;
	height: 		90%;
	width: 			50px;
	float: 			right;
	cursor:			pointer;
}

.arrow-down {
	width: 0; 
	height: 0; 
	border-left: 13px solid transparent;
	border-right: 13px solid transparent;
	border-top: 15px solid white;
	margin-left: auto;
	margin-right: auto;
	margin-top: 15px;
}

#map-canvas{ 
		width: 100%;
		height: 100%; 
		float:left;
}


